{
  "name": "@webstencils/core",
  "version": "0.1.0",
  "description": "A React Framework for building extensible drag and drop page editors",
  "keywords": [
    "react",
    "drag-and-drop",
    "page-editor",
    "web-builder",
    "html-builder",
    "builder",
    "editor",
    "framework",
    "wysiwyg",
    "html"
  ],
  "author": "Denys Vuika <denys.vuika@gmail.com>",
  "license": "Apache-2.0",
  "homepage": "https://github.com/DenysVuika/handicraft",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./index.cjs.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DenysVuika/handicraft.git"
  },
  "scripts": {
    "yalc": "yalc push",
    "clean": "npx rimraf lib dist .rollup.cache"
  },
  "bugs": {
    "url": "https://github.com/DenysVuika/handicraft/issues"
  },
  "dependencies": {
    "debounce": "^2.0.0",
    "immer": "^9.0.6",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.23",
    "shallowequal": "^1.1.0",
    "tiny-invariant": "^1.0.6"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.195",
    "@types/react": "18.0.27",
    "react": "18.2.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/rollup:rollup",
        "options": {
          "format": [
            "esm",
            "cjs"
          ],
          "tsConfig": "packages/core/tsconfig.json",
          "outputPath": "packages/core/dist",
          "main": "packages/core/src/index.ts",
          "generateExportsField": true,
          "project": "packages/core/package.json",
          "assets": [
            "packages/core/README.md",
            "packages/core/LICENSE"
          ],
          "external": [
            "react",
            "react-dom",
            "styled-components"
          ],
          "compiler": "tsc",
          "allowJs": true
        }
      },
      "yalc": {
        "dependsOn": [
          {
            "target": "build"
          }
        ]
      }
    },
    "includedScripts": [
      "build",
      "start",
      "clean",
      "yalc"
    ]
  }
}
