{
  "name": "@webstencils/layers",
  "description": "A Photoshop-like layers panel for your page editor",
  "keywords": [
    "wysiwyg",
    "html",
    "layers",
    "photoshop",
    "page-editor",
    "web-builder",
    "react"
  ],
  "version": "0.1.0",
  "author": "Denys Vuika <denys.vuika@gmail.com>",
  "license": "Apache-2.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "scripts": {
    "start": "npx rollup -c rollup.config.mjs -w",
    "build": "npx rollup -c rollup.config.mjs",
    "yalc": "yalc push",
    "clean": "npx rimraf lib dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webstencils/core/"
  },
  "bugs": {
    "url": "https://github.com/webstencils/core/issues"
  },
  "homepage": "https://github.com/webstencils/core/",
  "dependencies": {
    "react-contenteditable": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "7.7.4",
    "@svgr/rollup": "8.1.0",
    "styled-components": "4.2.1"
  },
  "peerDependencies": {
    "@webstencils/core": ">=0.1.0",
    "react": "^16.8.0 || ^17 || ^18",
    "styled-components": ">= 4"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          {
            "projects": "@webstencils/core",
            "target": "build",
            "params": "forward"
          }
        ],
        "cache": true,
        "inputs": [
          "{projectRoot}/**/*.ts",
          "{projectRoot}/tsconfig.json",
          {
            "externalDependencies": [
              "typescript"
            ]
          }
        ],
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "yalc": {
        "dependsOn": [
          {
            "target": "build"
          }
        ]
      }
    },
    "includedScripts": [
      "build",
      "start",
      "clean",
      "yalc"
    ]
  }
}
